{
    "audio": "pipewire",
    "config_version": "2.5.1",
    "debug": false,
    "desktop-environment": "bspwm",
    "gfx_driver": "Intel (open-source)",
    "hostname": "Amin-DailyDriver",
    "mirror-region": {
        "Turkey": {
            "http://ftp.linux.org.tr/archlinux/$repo/os/$arch": true
        }
    },
    "no_pkg_lookups": false,
    "offline": false,
    "packages": [
        "chromium", "firefox",
        "man-db", "texinfo", "man-pages",
        "base-devel", "openssh", "openssl", "zlib", "xz", "clang",
        "sxhkd", "rofi", "feh", "alacritty", "fzf", "tmux", "lshw", "dmenu", "picom", "xsecurelock", "xorg-xinit", "xorg", "mesa-utils", "arandr", "autorandr", "neofetch", "htop", "xclip", "wmname", "zsh", "git", "polybar", "reflector", "aria2", "wget", "ttf-liberation", "tk", "python-pywal",
        "vim", "code",
        "duf", "ncdu", "udisks2",
        "docker",
        "mpv", "yt-dlp",
        "mc", "ranger",
        "pass", "browserpass", "browserpass-chromium",
        "cdrtools",
        "flameshot",
        "pavucontrol", "alsa-firmware", "sof-firmware", "alsa-ucm-conf", "pamixer", "spotifyctl",
        "zip", "unzip",
        "openresolv", "iwd", "wireguard-tools",
        "lightdm-webkit2-greeter", "lightdm-webkit-theme-litarvan"
    ],
    "profile": {
        "path": "/usr/lib/python3.10/site-packages/archinstall/profiles/bspwm.py"
    },
    "script": "guided",
    "silent": false,
    "swap": true,
    "timezone": "Europe/Istanbul",
    "version": "2.5.1",
    "additional-repositories": [
        "multilib"
    ],
    "nic": {
        "dhcp": true,
        "dns": null,
        "gateway": null,
        "iface": null,
        "ip": null,
        "type": "iso"
    },
    "custom-commands": [
        "install -Dm755 /usr/share/doc/bspwm/examples/bspwmrc /home/amin/.config/bspwm/bspwmrc",
        "install -Dm644 /usr/share/doc/bspwm/examples/sxhkdrc /home/amin/.config/sxhkd/sxhkdrc",
        "git clone https://github.com/aminzabardast/dotfiles.git /home/amin/.dotfiles",
        "chown -R amin:amin /home/amin/.dotfiles",
        "chown -R amin:amin /home/amin/.config",
        "git clone https://aur.archlinux.org/paru.git /opt/paru",
        "chown -R amin:amin /opt/paru",
        "sed -i 's/#MAKEFLAGS/MAKEFLAGS/g' /etc/makepkg.conf",
        "sed -i 's/-j2/-j$(nproc)/g' /etc/makepkg.conf",
        "sed -i 's/super + @space/ctrl + @space/gI' /home/amin/.config/sxhkd/sxhkdrc # This is for VM test",
        "systemctl enable iwd",
        "cp /etc/lightdm/Xsession /etc/lightdm/Xsession.backup",
        "sed -i 's/\\.xprofile/\\.zprofile/g' /etc/lightdm/Xsession",
        "cp /etc/lightdm/lightdm.conf /etc/lightdm/lightdm.conf.backup",
        "sed -i '/^\\[Seat:\\*\\]/a greeter-session=lightdm-webkit2-greeter' /etc/lightdm/lightdm.conf",
        "cp /etc/lightdm/lightdm-webkit2-greeter.conf /etc/lightdm/lightdm-webkit2-greeter.conf.backup",
        "sed -i 's/^webkit_theme/#webkit_theme/g' /etc/lightdm/lightdm-webkit2-greeter.conf",
        "sed -i '/^\\[greeter\\]/a webkit_theme = litarvan' /etc/lightdm/lightdm-webkit2-greeter.conf"
    ]
}
